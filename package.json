{
  "name": "readplugin",
  "displayName": "Read Plugin",
  "description": "A VSCode extension for secretly reading books while coding",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.1"
  },
  "publisher": "your-name",
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "reader",
    "books",
    "pdf",
    "text",
    "reading"
  ],
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/read-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/read-plugin/issues"
  },
  "homepage": "https://github.com/your-username/read-plugin#readme",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "readplugin.addBook",
        "title": "Add Book",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.openBook",
        "title": "Open Book",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.removeBook",
        "title": "Remove Book",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.increaseFontSize",
        "title": "Increase Font Size",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.decreaseFontSize",
        "title": "Decrease Font Size",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.resetFontSize",
        "title": "Reset Font Size",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.openSettings",
        "title": "Open Settings",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.loginWechatRead",
        "title": "Login to WeChat Read",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.syncWechatBooks",
        "title": "Sync WeChat Books",
        "category": "Book Reader"
      },
      {
        "command": "readplugin.refreshWechatBooks",
        "title": "Refresh WeChat Books",
        "category": "Book Reader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "read-plugin",
          "title": "Read",
          "icon": "media/book.svg"
        }
      ]
    },
    "views": {
      "read-plugin": [
        {
          "id": "read-plugin-books",
          "name": "Books"
        },
        {
          "id": "read-plugin.bookContent",
          "name": "Book Content",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "read-plugin-books",
        "contents": "No books added yet.\n[Add Book](command:readplugin.addBook)"
      }
    ],
    "configuration": {
      "title": "Book Reader",
      "properties": {
        "readplugin.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 48,
          "description": "Default font size for reading"
        },
        "readplugin.fontFamily": {
          "type": "string",
          "default": "'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "description": "Font family for reading"
        },
        "readplugin.lineHeight": {
          "type": "number",
          "default": 1.8,
          "minimum": 1,
          "maximum": 3,
          "description": "Line height for reading"
        },
        "readplugin.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Reading theme"
        },
        "readplugin.autoSaveInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Auto save interval in milliseconds"
        },
        "readplugin.maxFileSize": {
          "type": "number",
          "default": 52428800,
          "description": "Maximum file size in bytes (default: 50MB)"
        },
        "readplugin.wechatReadToken": {
          "type": "string",
          "default": "",
          "description": "微信读书登录Token"
        },
        "readplugin.wechatReadUserId": {
          "type": "string",
          "default": "",
          "description": "微信读书用户ID"
        }
      }
    },
    "keybindings": [
      {
        "command": "readplugin.increaseFontSize",
        "key": "ctrl+=",
        "when": "webviewFocus && activeWebviewPanelId == 'read-plugin.bookContent'"
      },
      {
        "command": "readplugin.decreaseFontSize",
        "key": "ctrl+-",
        "when": "webviewFocus && activeWebviewPanelId == 'read-plugin.bookContent'"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "readplugin.addBook",
          "when": "view == read-plugin-books",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "readplugin.openBook",
          "when": "view == read-plugin-books && viewItem == bookItem",
          "group": "navigation"
        },
        {
          "command": "readplugin.removeBook",
          "when": "view == read-plugin-books && viewItem == bookItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "iconv-lite": "^0.7.2"
  }
}
